extends base.pug

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="title" placeholder="Write here title" type='text' required maxLength=30)
        input(name="description" placeholder="Write here description" type='text' required minLength=20)
        input(name="hashtags" placeholder="Hashtags, separted by comma(,)" type='text' required)
        input(type="submit" value="upload")