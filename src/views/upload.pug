extends base.pug

block content
    div 
        video#preview 
        button#startBtn start recording
    if errorMessage
        span=errorMessage
    form(method="POST" enctype="multipart/form-data")
        label(for="video") Video File 
        input(type="file" accept="video/*" required id="video" name="video")
        input(name="title" placeholder="Write here title" type='text' required maxLength=30)
        input(name="description" placeholder="Write here description" type='text' required minLength=20)
        input(name="hashtags" placeholder="Hashtags, separted by comma(,)" type='text' required)
        input(type="submit" value="upload")
block scripts 
    script(src="/assets/js/recorder.js")